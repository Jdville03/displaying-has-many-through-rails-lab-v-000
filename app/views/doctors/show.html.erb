<h2>
  Doctor <%= @doctor.name %><br>
  <small>Department: <%= @doctor.department %></small>
</h2>

<h3>Appointments:</h3>
<ul>
  <% @doctor.appointments.sort_by{|appointment| appointment.appointment_datetime}.each do |appointment| %>
    <li>
      <%= appointment.appointment_datetime.strftime("%B %d, %Y at %R") %><br>
      Patient: <%= link_to appointment.patient.name, patient_path(appointment.patient) %>
    </li><br>
  <% end %>
</ul>
